//import animations
@import 'foundation.css'
@import('animations.styl')

.row
  width 1280px

// Mixins
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

inset()
  -moz-box-shadow:    0px 1px 1px 0px rgba(255,255,255,.8), inset 0px 1px 1px 0px rgba(0,0,0,.3)
  -webkit-box-shadow: 0px 1px 1px 0px rgba(255,255,255,.8), inset 0px 1px 1px 0px rgba(0,0,0,.3)
  box-shadow:         0px 1px 1px 0px rgba(255,255,255,.8), inset 0px 1px 1px 0px rgba(0,0,0,.3)

shadow(color)
  -moz-box-shadow:    0px 1px 1px 0px color
  -webkit-box-shadow: 0px 1px 1px 0px color
  box-shadow:         0px 1px 1px 0px color

filter(property)
  -webkit-filter  property
  -moz-filter     property
  -ms-filter      property
  -o-filter       property

body
  animation-name(fade-in)
  animation-duration(1s)

//notification

.notification
  position fixed
  top -100px
  left 0
  right 0
  text-align center
  margin 0 auto
  transform(rotate(50deg))
  transform-origin(100% 50% 0)
  transition(all, 1s)
  
  &.show
    transform(translate(0, 120px) rotate(0deg))


  span
    font-size: 15px;
    padding: 8px 16px;
    background: #F9EDBE;
    border: 1px solid #F0C36D;
    border-radius(20px)
    shadow(rgba(0,0,0,.3))

// errors

input[type=text]

  &.error
    border 1px solid #DA4F49
    animation-duration(.5s)
    animation-name(pulse)
    animation-iteration-count(infinite)



// Style
body
  font-family: "Open Sans"
  font-weight: 300
  background: #fff url(/images/patterns/subtle_dots.png)

.list-item
  padding 20px 0
  box-shadow inset 0px 0px 20px rgba(255,255,255,.5)
  border-bottom 1px solid #d2d2d2

  &:nth-child(2n+2)
    box-shadow inset 0px 0px 20px rgba(0,0,0,.1);

  &.members
    background #efefef

  &.sign-up
    background #222
    color #fff
    h3
      color #ddd

.container
  margin-bottom: 10px;

.well
  inset()

.center
  text-align: center


.roundify
  border-radius(50%)

.email-form
  input[type=text]
    padding 13px 30px 15px
    height auto
  input[type=submit]
    padding 15px 30px 16px
    font-size 17px
    height auto


.header
  img
    max-width 150px
    margin 0 10px 0 0
  margin-top: 1em
  h1
    font-size: 60px;
    line-height: 120px;
  .description
    font-size: 20px
    margin-bottom: 20px
  img.logo
    margin: 20px

#index
  text-align: left
  margin-bottom: 40px
  .shadow
    display: block;
    position: relative;
    max-width: 120px;
    max-height: 120px;
    margin: 20px auto;
    //shadow(#333)
    &:before
      content:'';
      position:absolute;
      width:100%;
      height:100%;
      inset();
      border-radius(50%);
    

.meetings
    overflow: hidden;
    position: relative;
    height : 440px;

    div
      position: absolute;

  .map-mock
    margin: 0;
    top: 0;
    left: 0;
    a
      display: block;
      height: 420px;
      width: 100%;

  .columns.seven.mobile-two.center img
      margin-top 10px
      
  .persons
    .person
      height: 360px;
      .face
        max-width 100px
        box-shadow: 0px 1px 1px #fff, 0px -1px 1px  rgba(0,0,0,.5) 
        filter(contrast(100%))
        transition(all, 1s)
        &:hover
          filter(contrast(200%))


@media(max-width: 767px)

  #index
    .meetings
      .join-us
        top: 430px;
        background: rgba(255,255,255,.8);
    

  .persons
    .person
      height: auto!important
      border-bottom: 1px solid #ddd
      &:first-child
        border-top: 1px solid #ddd
      .face
        margin: 20px 0;
        max-width: 64px;


  
